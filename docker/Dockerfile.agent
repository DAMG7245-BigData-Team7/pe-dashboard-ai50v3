FROM python:3.13-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . /app

# Set Python path
ENV PYTHONPATH=/app

# Set HITL to auto-approve for containerized environments
ENV HITL_AUTO_APPROVE=true

# Health check (check if workflow can import successfully)
HEALTHCHECK --interval=60s --timeout=10s --start-period=10s --retries=3 \
    CMD python -c "from src.workflows.due_diligence_graph import compile_workflow; print('OK')"

# Default command: run workflow for anthropic (can be overridden)
CMD ["python", "src/workflows/due_diligence_graph.py", "anthropic"]
