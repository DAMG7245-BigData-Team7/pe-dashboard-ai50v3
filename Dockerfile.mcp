FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY src/ ./src/
COPY data/ ./data/
COPY config/ ./config/

# Expose MCP server port
EXPOSE 9000

# Run MCP server
CMD ["python", "-m", "src.server.mcp_server"]